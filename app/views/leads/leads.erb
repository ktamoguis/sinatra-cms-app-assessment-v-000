<h1>Welcome, <%= @user.name %> </h1>
<h2>Region: <%= @user.region.name %></h2>

<p><a href="/leads/new">Create New Lead</a> or <a href="/logout">Log Out</a> to continue.
<br><br>

<form action="/leads/:id" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label>Input ID no of lead to update:</label>
  <input type="text" name="id">
  <input type="submit" name="Update" id="Update">
</form>
<p>OR</p>
<form action="/leads/:id/delete" method="post">
  <label>Input ID no of lead to delete:</label>
  <input type="text" name="id">
  <input type="submit" name="id" id="Update">
</form>
<br><br>
<h2>Your Leads</h2>
<table>
  <tr>
    <th>ID no</th>
    <th>Lead Name</th>
    <th>Status</th>
  </tr>
  <% @user.leads.each do |lead| %>
  <tr>
      <td><%= lead.id %></td>
      <td><%= lead.name %></td>
      <td><%= lead.status %></td>
  </tr>
  <% end %>
</table>
